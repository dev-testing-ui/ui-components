{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../build",
    "esModuleInterop": true,
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false                            /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/tests/**",
    "src/mail/**",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/stories/**/*.*",
    "postcss*",
    "jest*",
    "coverage/**"
  ]
}
